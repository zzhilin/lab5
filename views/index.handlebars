<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/bootstrap.css">
	<link rel="stylesheet" href="css/bootstrap-theme.css">
	<link rel="stylesheet" href="css/hci-friends.css">
	
	
</head>

<body>
	<div class="container">
		<h1>My HCI Friends</h1>
		<div class="friend-container">
			{{#each friends}}
				<img src="{{imageURL}}" alt="" class="img-responsive img-rounded">
				<h3><a href="#" id="name">{{name}}</a></h3>
				<p>{{description}}</p>
			{{/each}}
			{{!-- <img src="http://lorempixel.com/500/500/people" alt="people">
			<h3>Fake friend</h3>
			<p>My imaginary friend</p> --}}
		</div>
		<form id="addFriendForm" role="form" method="get" action="/add">
			<h3>Add a friend</h3>
			<div class="form-group">
				<label for="name">Name:</label>
				<input type="text" class="form-control" id="name" placeholder="Name" name="name">
			</div>
			<div class="form-group">
				<label for="description">Description:</label>
				<input type="text" class="form-control" id="description" placeholder="Description" name="description">
			</div>
			<input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
		</form>
	</div>
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/hci-friends.js"></script>
	<script src="js/bootstrap.js"></script>
</body>
</html>
